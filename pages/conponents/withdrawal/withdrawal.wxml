          <view class="weui-cell__hd">
            <label class="weui-label">提现金额(元)</label>
          </view>
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder-class="weui-input__placeholder" type="digit" value="{{jr}}"
              bindinput="inputHandle" data-prop="jr" maxlength="5"/>
          </view>
        </view>
        <view class="weui-cell weui-cell_active">
          <button class="weui-btn weui-btn_primary" bindtap="txs" disabled="{{disa}}">提 现</button>
        </view>
      </view>
    </view>
  </view>

</view>