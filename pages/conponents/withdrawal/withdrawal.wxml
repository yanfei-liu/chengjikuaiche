      <view class="weui-cells weui-cells_form">
        <view class="weui-cell weui-cell_active">
          <view class="weui-cell__hd"><label class="weui-label">余额(元):</label></view>
          <view class="weui-cell__bd">
            <input class="weui-input" style="color: #a29e9e!important;" disabled placeholder-class="weui-input__placeholder" value="{{ktxje}}" />
          </view>
        </view>
