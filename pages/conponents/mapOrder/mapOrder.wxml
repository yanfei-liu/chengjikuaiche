<!--pages/conponents/mapOrder/mapOrder.wxml-->
<map id="m" 
class="m"
latitude="{{latitude}}" 
longitude="{{longitude}}" 
markers="{{markers}}" 
include-points="{{markers}}"
data-id="{{markers}}"
setting="{{setting}}"
show-location
bindcallouttap="getOrder"
>
</map>

<view wx:if="{{orderView}}" class="orderView">
  <view class="orderView2">
    <view class="orderView-item">出发地：</view>
    <view class="orderView-item">目的地：</view>
    <view class="orderView-item">出发时间：</view>
    <view class="orderView-item">是否包车：</view>
    <view class="orderView-item">乘坐人数：</view>
    <view class="orderView-item">
      <view class="orderView-item2" bindtap="toClose">关闭</view>
      <view class="orderView-item3" bindtap="toAccept">接单</view>
    </view>
  </view>
</view>
